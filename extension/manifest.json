{
  "manifest_version": 2,
  "name": "Firefox Agent Bridge",
  "version": "0.1.0",
  "description": "Bridge AI agent commands to the active Firefox tab via native messaging.",
  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "applications": {
    "gecko": {
      "id": "firefox-agent-bridge@local",
      "strict_min_version": "91.0"
    }
  }
}
