{
  "manifest_version": 2,
  "name": "Browser Agent Bridge (Dev)",
  "version": "0.2.0",
  "description": "Development version - Bridge AI agent commands to the active browser tab.",
  "permissions": [
    "tabs",
    "activeTab",
    "nativeMessaging",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "Browser Agent Bridge (Dev) - Idle",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "firefox-agent-bridge-dev@local",
      "strict_min_version": "91.0"
    }
  }
}
